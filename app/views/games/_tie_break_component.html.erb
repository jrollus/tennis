<% param_name = "game_form[game_sets_attributes][#{set_number - 1}][tie_break_attributes]" %>
<% if @form.persisted? %>
    <% if @game.game_sets[set_number - 1] %>
        <% if @game.game_sets[set_number - 1].tie_break %>

        <% attr_name =  "tie_break_#{set_number}_id".to_sym %>
        <%= f.input attr_name, as: :hidden , 
                            input_html: {value: @game.game_sets[set_number - 1].tie_break.id, name: param_name + '[id]', data: {target: "sets.#{attr_name}"}} %>

        <% attr_name =  "tie_break_#{set_number}_destroy".to_sym %>
        <%= f.input attr_name, as: :hidden , 
                            input_html: {value: false, name: param_name + '[_destroy]', data: {target: "sets.#{attr_name}"}},
                            disabled: true %>
        <% end %>
    <% end %>
<% end %>

<% attr_name =  "tie_break_#{set_number}_1".to_sym %>
<%= f.input attr_name, label: "Tie Break 1",
                       input_html: {name: param_name + '[points_1]', data: {target: "sets.#{attr_name}", action: 'sets#setsHandler'}}, 
                       wrapper_html: {class: 'visibility-off', data: {target: "sets.#{attr_name}_2"}}, 
                       disabled: true %>

<% attr_name =  "tie_break_#{set_number}_2".to_sym %>
<%= f.input attr_name, label: "", 
                       input_html: {name: param_name + '[points_2]', data: {target: "sets.#{attr_name}", action: 'sets#setsHandler'}}, 
                       wrapper_html: {class: 'visibility-off', data: {target: "sets.#{attr_name}_2"}},
                       disabled: true %>