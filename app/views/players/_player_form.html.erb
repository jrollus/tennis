<%= f.input :id, as: :hidden if edit %>

<% if autofill %>
  <%= f.input :affiliation_number, label: "Numéro d'affiliation", 
                                   input_html: {data: {target: 'affiliation.number', action: 'affiliation#autofill'}} %>
<% else %>
  <%= f.input :affiliation_number, label: "Numéro d'affiliation", 
                                   input_html: {data: {target: 'affiliation.number'}} %>
<% end %>
<%= f.input :first_name, label: 'Prénom', 
                         input_html: {data: {target: 'affiliation.firstName'}} %>
<%= f.input :last_name, label: 'Nom', 
                        input_html: {data: {target: 'affiliation.lastName'}} %>
<%= f.association :club, label: 'Club',
                         input_html: {data: {target: 'affiliation.club'}} %>
<%= f.input :birthdate, label: "Date de naissance", as: :date, html5: true, input_html: {max: '2050-12-31'} %>
<%= f.input :gender, label: 'Sexe', 
                     collection:[['Homme', 'male'], ['Femme', 'female']], 
                     input_html: {data: {target: 'affiliation.gender'}} %>
<%= f.input :dominant_hand, label: 'Main dominante', 
                            collection: [['Droitier', 'right-handed'], ['Gaucher', 'left-handed']], 
                            input_html: {data: {target:'affiliation.dominantHand'}} %>