<% if player.user %>
  <% if player.user.avatar.attached? %>
    <%= cl_image_tag(player.user.avatar.key, class: "#{stats ? 'stats-avatar-img-round' : 'compare-avatar-img-round'}") %>
  <% else %>
    <%= image_tag("#{player.gender == 'male' ? 'stats/boy.png' : 'stats/girl.png'}", 
                      class: "#{stats ? 'stats-avatar-img' : 'compare-avatar-img'}") %>
  <% end %>
<% else %>
  <%= image_tag("#{player.gender == 'male' ? 'stats/boy.png' : 'stats/girl.png'}", 
                   class: "#{stats ? 'stats-avatar-img' : 'compare-avatar-img'}") %>
<% end %>