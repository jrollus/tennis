      <div class='navbar-collapsable'>
        <%= link_to 'Encodage', new_game_path, class: 'navbar-link' %>
        <%= link_to 'Statistiques', stats_path, class: 'navbar-link' %>
        <%= link_to 'Classement', ranking_histories_path, class: 'navbar-link' %>
