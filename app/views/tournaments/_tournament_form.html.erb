<%= simple_form_for(@tournament, method: (edit ? 'patch' : 'post')) do |f| %>
  <%= f.input :id, as: :hidden if edit %>
  <%= f.association :club, label: 'Club' %>
  <%= f.association :category, label: 'Catégorie', 
                               label_method: :category, 
                               value_method: :id %>
  <%= f.input :start_date, label: "Début", as: :date, html5: true %>
  <%= f.input :end_date, label: 'Fin', as: :date, html5: true %>
  <%= f.input :nbr_participants, label: "Nombre d'inscrits" %>
  <div class="form-actions">
    <%= f.button :submit, (edit ? 'Actualiser' : 'Créer') %>
  </div>
<% end %>